:root {
    /* Colors - Neutral & Premium Palette */
    --bg-body: #ffffff;
    --bg-light: #f8f9fa;
    --text-primary: #1a1a1a;
    --text-secondary: #595959;
    /* Softer dark gray */
    --text-accent: #6366f1;
    /* Indigo-500 equivalent, premium tech feel */
    --primary-color: #111827;
    /* Near black for heavy elements */
    --primary-hover: #374151;
    --border-color: #e5e7eb;

    /* Spacing */
    --section-padding: 5rem 1rem;
    --container-width: 1100px;

    /* Typography */
    --font-heading: 'Inter', sans-serif;
    --font-body: 'Inter', sans-serif;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);

    /* Transitions */
    --transition-base: all 0.3s ease;
}

/* Icons */
.icon {
    width: 20px;
    height: 20px;
    fill: currentColor;
    vertical-align: middle;
}

.btn .icon {
    width: 24px;
    height: 24px;
}

/* Reset & Base */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-body);
    background-color: var(--bg-body);
    color: var(--text-secondary);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    color: var(--text-primary);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition-base);
}

ul {
    list-style: none;
}

.container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1.5rem;
}

.section {
    padding: var(--section-padding);
}

.bg-light {
    background-color: var(--bg-light);
}

.text-center {
    text-align: center;
}

/* Typography Utilities */
.section-title {
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
    display: inline-block;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 40px;
    height: 3px;
    background-color: var(--text-accent);
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition-base);
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
    border: 1px solid var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-hover);
    border-color: var(--primary-hover);
    transform: translateY(-2px);
    cursor: pointer;
    position: relative;
    z-index: 10;
}

.btn-secondary {
    background-color: transparent;
    color: var(--primary-color);
    border: 1px solid var(--border-color);
    margin-left: 1rem;
    position: relative;
    z-index: 10;
}

.btn-secondary:hover {
    border-color: var(--primary-color);
    background-color: var(--bg-light);
}

.btn-primary-sm {
    background-color: var(--primary-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
}

.btn-primary-sm:hover {
    background-color: var(--primary-hover);
}

/* Navbar */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid var(--border-color);
    padding: 1rem 0;
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.nav-links li a {
    font-weight: 500;
    font-size: 0.95rem;
}

.nav-links li a:hover {
    color: var(--text-accent);
}

.hamburger {
    display: none;
    cursor: pointer;
}

/* Hero Section */
.hero-section {
    padding-top: 140px;
    /* Navbar height + spacing */
    padding-bottom: 5rem;
    min-height: 80vh;
    display: flex;
    align-items: center;
}

.hero-content {
    max-width: 800px;
}

.eyebrow {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-accent);
    margin-bottom: 0.5rem;
    display: block;
}

.hero-name {
    font-size: 4rem;
    letter-spacing: -1px;
    margin-bottom: 0.5rem;
}

.hero-role {
    font-size: 2rem;
    color: var(--text-secondary);
    font-weight: 500;
    margin-bottom: 1.5rem;
}

.hero-statement {
    font-size: 1.25rem;
    max-width: 600px;
    margin-bottom: 2.5rem;
}

/* About Section */
.about-content {
    max-width: 800px;
    font-size: 1.1rem;
}

.about-content p {
    margin-bottom: 1.5rem;
}

/* Skills Section */
.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.skill-category h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.skill-tags span {
    background-color: #fff;
    border: 1px solid var(--border-color);
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: var(--transition-base);
}

.skill-tags span:hover {
    border-color: var(--text-accent);
    color: var(--text-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
}

/* Projects Section */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
}

.project-card {
    background: #fff;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 2rem;
    transition: var(--transition-base);
}

.project-card:hover {
    border-color: var(--text-accent);
    box-shadow: var(--shadow-md);
    transform: translateY(-5px);
}

.project-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.project-meta {
    margin-bottom: 1.5rem;
}

.tag {
    display: inline-block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text-accent);
    background-color: rgba(99, 102, 241, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    margin-right: 0.5rem;
    font-weight: 600;
}

.project-details p {
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
}

.project-details strong {
    color: var(--text-primary);
}

/* Experience Section */
.timeline {
    border-left: 2px solid var(--border-color);
    padding-left: 2rem;
    margin-left: 1rem;
}

.timeline-item {
    position: relative;
    margin-bottom: 3rem;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -2.6rem;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    background-color: var(--bg-body);
    border: 3px solid var(--text-accent);
    border-radius: 50%;
}

.timeline-date {
    font-size: 0.85rem;
    text-transform: uppercase;
    color: var(--text-accent);
    font-weight: 600;
    margin-bottom: 0.5rem;
}

/* Education & Certifications */
.row {
    display: flex;
    gap: 4rem;
    flex-wrap: wrap;
}

.col-half {
    flex: 1;
    min-width: 300px;
}

.education-list li,
.cert-list li {
    margin-bottom: 1.5rem;
}

.education-list h3 {
    font-size: 1.1rem;
    margin-bottom: 0.2rem;
}

.cert-list li {
    position: relative;
    padding-left: 1.5rem;
}

.cert-list li::before {
    content: 'ΓåÆ';
    position: absolute;
    left: 0;
    color: var(--text-accent);
}

/* Contact Section */
.contact-section {
    padding: 6rem 1rem;
}

.contact-text {
    max-width: 600px;
    margin: 0 auto 2rem auto;
    font-size: 1.2rem;
}

.contact-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    align-items: center;
}

.social-link {
    font-weight: 500;
}

.social-link:hover {
    color: var(--text-accent);
}

/* Footer */
footer {
    padding: 2rem 0;
    text-align: center;
    border-top: 1px solid var(--border-color);
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* Responsive */
@media (max-width: 768px) {
    .hero-name {
        font-size: 2.5rem;
    }

    .hero-role {
        font-size: 1.5rem;
    }

    .nav-links {
        display: none;
        /* Hide for now, add js toggle later */
    }

    .hamburger {
        display: block;
    }
}

/* Creative Education Section */
.education-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: relative;
}

.education-card {
    background: #fff;
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
    transition: var(--transition-base);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.education-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    border-color: var(--text-accent);
}

.education-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 4px;
    background: var(--text-accent);
}

.edu-content h3 {
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
}

.edu-score {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-accent);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 8px;
}

.cert-card embed {
    border-radius: 4px;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-color);
}
